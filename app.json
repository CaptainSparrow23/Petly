{
  "expo": {
    "name": "Petly",
    "slug": "petly",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "petly",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "icon": "./assets/images/petly_icon.png",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.petly"
    },
    "icon": "./assets/images/petly_icon.png",
    "android": {
      "package": "com.petly",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/cat_splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.992118540403-mle506j12qb2feirctju62q5ra74qa8n"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "backendUrl": "https://petly-gsxb.onrender.com",
      "googleWebClientId": "992118540403-l5kre9ulblv1i7uu5kmkhrbgvp470esv.apps.googleusercontent.com",
      "googleIosClientId": "992118540403-mle506j12qb2feirctju62q5ra74qa8n.apps.googleusercontent.com",
      "googleAndroidClientId": "",
      "revenuecatIosApiKey": "test_KuPOveTeRTrnrbzwHvToUeBLKQh",
      "revenuecatAndroidApiKey": "test_KuPOveTeRTrnrbzwHvToUeBLKQh"
    }
  }
}
